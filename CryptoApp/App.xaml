<Application x:Class="CryptoApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CryptoApp"
             xmlns:viewModel="clr-namespace:CryptoApp.MVVM.ViewModel" 
             xmlns:veiw="clr-namespace:CryptoApp.MVVM.View">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/DarkTheme.xaml"/>
                <ResourceDictionary Source="Style/HomeButtonStyle.xaml"/>
                <ResourceDictionary Source="Style/NavigationListStyle.xaml"/>
                <ResourceDictionary Source="Style/NavigationListButtonStyle.xaml"/>
                <ResourceDictionary Source="Style/SearchTextBoxStyle.xaml"/>
                <ResourceDictionary Source="Style/ThemeButtonStyle.xaml"/>
                <ResourceDictionary Source="Style/LanguageSelectionStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type TypeName = viewModel:HomeViewModel}">
            <veiw:HomeView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type TypeName = viewModel:InfoViewModel}">
            <veiw:InfoView/>
        </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
