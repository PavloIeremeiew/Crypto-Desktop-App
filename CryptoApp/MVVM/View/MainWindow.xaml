<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoApp" 
        xmlns:local1="clr-namespace:CryptoApp.Services.Realization" xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        mc:Ignorable="d"
        Title="MainWindow" Height="675" Width="1200"
        >
    <Window.Resources>
        <local1:StringToRoundedDecimalConverter x:Key="StringToRoundedDecimalConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="{DynamicResource NavigationColumnBackgroundColor}">
            <Button Style="{StaticResource HomeButton}" Content="CRYPTO" Command="{Binding Path= NavigateToHomeViewComand}"/>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Style="{StaticResource SearchTextBox}" Grid.Column="0" Text="{Binding FilterText}" />
                <Button Grid.Column="1" Style="{StaticResource CenelButton}"
                          
                         Command="{Binding Path= ClearFilterTextCommand}"
                        >
                        <Image Source="{DynamicResource CencelImage}" Width="10"/>
                </Button>
                <Button Grid.Column="2" Margin="20,0" Content="Q" Command="{Binding Path= FilterListCommand}"/>
            </Grid>

            <ScrollViewer Height="400" Style="{StaticResource NavigationList}" >
                <ItemsControl  ItemsSource="{Binding Сurrencies}">
                <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding symbol}" Style="{StaticResource NavigationListButton}"
                                Command="{Binding  DataContext.NavigateToInfoViewComand,
                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding id}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
            </ScrollViewer>
            
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding Path= NavigationService.CurrentView}"/>

    </Grid>
</Window>
