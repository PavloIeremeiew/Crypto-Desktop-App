<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoApp" 
        xmlns:local1="clr-namespace:CryptoApp.Services.Realization"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local1:StringToRoundedDecimalConverter x:Key="StringToRoundedDecimalConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Content="Home" Command="{Binding Path= NavigateToHomeViewComand}"/>

            <ItemsControl  ItemsSource="{Binding Сurrencies}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding symbol}" 
                                Command="{Binding  DataContext.NavigateToInfoViewComand,
                            RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                CommandParameter="{Binding id}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </StackPanel>

        <ContentControl Grid.Column="1" Content="{Binding Path= NavigationService.CurrentView}"/>

    </Grid>
</Window>
